@model MarketX.ViewModels.ResultAdvertisementCard
<div class="card">
    <div class="card-body row">
        <div class="col-8 border-right border-dark">
            <a class="text-decoration-none text-body row" asp-controller="Advertisement" asp-action="Advertisement" asp-route-id="@Model.ID">
                <div class="col-3 py-2 d-flex flex-column justify-content-center">
                    <img class="card-img m-auto" src="@Url.Content(Model.ImagePath)" />
                </div>
                <div class="col-6">
                    <h3 class="card-title">@Model.Title</h3>
                    <div class="card-text row">
                        <div class="font-weight-bold col-4">@Html.DisplayNameFor(model => model.Condition):</div>
                        <div class="col-8">@(Model.Condition == MarketX.DAL.Entities.Condition.New ? "Új" : "Használt")</div>
                    </div>
                    <div class="card-text row">
                        <div class="font-weight-bold col-4">Hely:</div>
                        <div class="col-8">@Model.County, @Model.City</div>
                    </div>
                    <div class="row">
                        @if (Model.AdType == AdType.Buying)
                        {
                            <div class="col-3 corner-ribbon-green m-2 ml-3 px-0">Keres</div>
                        }
                        else
                        {
                            <div class="col-3 corner-ribbon-red m-2 ml-3 px-0">Kínál</div>
                        }
                    </div>
                </div>
                <div class="col-3 d-flex flex-column justify-content-center">
                    <div class="font-weight-bold">@Html.DisplayFor(model => model.Price)</div>
                </div>
            </a>
        </div>
        <div class="col-4 d-flex flex-column justify-content-center">
            <div class="d-flex flex-row justify-content-start">
                <a asp-controller="Advertisement" asp-action="EditAdvertisement" asp-route-id="@Model.ID" class="btn"><i class="fas fa-pen fa-2x"></i></a>
                <button value="@Model.ID" class="btnDeleteAd btn"><i class="fas fa-trash fa-2x"></i></button>
            </div>
            @if (Model.AdType == AdType.Selling)
            {
                <button class="btn btn-success">Megjelölés eladottként</button>
            }
            else
            {
                <button class="btn btn-success">Megjelölés megvásároltként</button>
            }
        </div>
    </div>
</div>