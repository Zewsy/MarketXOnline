@model ICollection<Category>

    <ul class=" list-unstyled">
        @foreach (var category in Model)
        {
            @if (category.ChildCategories.Any())
            {
                <li class="list-item">
                    <input type="radio" name="chosenCategoryRadio" id="@category.Name" />
                    <a data-toggle="collapse" href="#category-@category.ID">
                        @category.Name<i class="fa fa-chevron-right"></i>
                    </a>
                    <ul class="collapse" id="category-@category.ID">
                        @await Html.PartialAsync("_CategoryTree", category.ChildCategories)
                    </ul>
                </li>
            }
            else
            {
                <li class="list-item">
                    <input type="radio" name="chosenCategoryRadio" id="@category.Name" /> @category.Name
                </li>
            }
        }
    </ul>