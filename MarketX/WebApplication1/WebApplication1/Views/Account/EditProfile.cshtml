@model MarketX.ViewModels.EditProfileViewModel

@section Styles{
    <link rel="stylesheet" href="@Url.Content("~/css/userProfile.css")" />
}

<form enctype="multipart/form-data" asp-controller="Account" asp-action="EditProfile">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="OriginalProfilePicture" value="@Model.OriginalProfilePicture" />
    <div class="py-3 px-2">
        <div class="row pt-2 bg-light d-flex justify-content-center">
            <h1>Profil szerkesztése</h1>
        </div>
        <div class="row bg-light pt-2">
            <div class="col-7 pr-5">
                <div class="row pt-2">
                    <div class="col-4 d-flex flex-column justify-content-center">
                        <b>@Html.DisplayNameFor(u => u.LastName):</b>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="text" asp-for="LastName" />
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-4 d-flex flex-column justify-content-center">
                        <b>@Html.DisplayNameFor(u => u.FirstName):</b>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="text" asp-for="FirstName" />
                    </div>
                </div>
                <div class="row pt-2 d-flex justify-content-center">
                    <div class="col-4 d-flex flex-column justify-content-center">
                        <b>@Html.DisplayNameFor(u => u.Email):</b>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="email" asp-for="Email" />
                    </div>
                </div>
                <div class="row pt-2 d-flex justify-content-center">
                    <div class="col-4 d-flex flex-column justify-content-center">
                        <b>@Html.DisplayNameFor(u => u.Password):</b>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="password" asp-for="Password" />
                    </div>
                </div>
                <div class="row pt-2 d-flex justify-content-center">
                    <div class="col-4 d-flex flex-column justify-content-center">
                        <b>@Html.DisplayNameFor(u => u.ConfirmPassword):</b>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="password" asp-for="ConfirmPassword" />
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-4 d-flex flex-column justify-content-center">
                        <b>@Html.DisplayNameFor(u => u.PhoneNumber):</b>
                    </div>
                    <div class="col-8">
                        <input type="tel" class="form-control" asp-for="PhoneNumber" />
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="col-4 pt-2">
                        <b>Hely:</b>
                    </div>
                    <div class="col-8 pr-0">
                        <vc:city-county-select is-required="false" city-id="Model.CityId"></vc:city-county-select>
                    </div>
                </div>
                <div class="row pt-2 d-flex justify-content-center">
                    <div class="col-4 d-flex flex-column justify-content-center">
                        <b>* @Html.DisplayNameFor(u => u.OldPassword):</b>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="password" asp-for="OldPassword" />
                    </div>
                </div>
                <div class="row py-3">
                    <div class="col-6">
                        <input type="submit" class="btn btn-success">
                    </div>
                </div>
            </div>
            <div class="col-5">
                <div class="row py-2">
                    <label class="font-weight-bold col-3">Profilkép:</label>
                    <div class="custom-file col-6">
                        <label for="imgInput" class="btn btn-dark d-flex flex-column justify-content-center">Kép kiválasztása</label>
                        <input asp-for="ProfilePicture" id="imgInput" type="file" class="custom-file-input hide" />
                    </div>
                </div>
                <div class="d-flex justify-content-center pb-2">
                    <img id="img-profile" class="user-profile-picture" src="@Url.Content(Model.OriginalProfilePicture ?? "~/images/image-placeholder.jpg")" />
                </div>
                <div class="mt-5 pt-5">
                    <span class="text-danger" asp-validation-for="OldPassword"></span>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/js/userProfile.js"></script>
}